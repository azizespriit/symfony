{% extends 'frontoffice/index.html.twig' %}

{% block title %}Create New Publication{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Global Styles */
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f7fc;
            color: #333;
        }

        /* Form Container */
        .form-container {
            max-width: 800px;
            margin: 0 auto;
            padding: 40px;
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
        }

        .form-header {
            text-align: center;
            margin-bottom: 30px;
        }

        .form-header h2 {
            font-size: 28px;
            color: #333;
            font-weight: 600;
        }

        .form-header p {
            font-size: 16px;
            color: #777;
        }

        /* Card for Form */
        .form-card {
            border: none;
            border-radius: 10px;
            padding: 20px;
            background-color: #f9f9f9;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
        }

        /* Floating labels for inputs */
        .form-floating label {
            font-size: 16px;
            color: #777;
        }

        .form-floating .form-control:focus ~ label {
            color: #4d90fe;
        }

        .form-control {
            border-radius: 8px;
            padding: 12px 15px;
            font-size: 16px;
            border: 1px solid #e0e0e0;
            transition: all 0.3s ease;
        }

        .form-control:focus {
            border-color: #4d90fe;
            box-shadow: 0 0 0 0.2rem rgba(77, 144, 254, 0.25);
        }

        /* Image upload styling */
        .image-upload-container {
            border: 2px dashed #e0e0e0;
            border-radius: 8px;
            padding: 20px;
            text-align: center;
            cursor: pointer;
            transition: all 0.3s ease;
            margin-bottom: 1.5rem;
        }

        .image-upload-container:hover {
            border-color: #4d90fe;
            background-color: rgba(77, 144, 254, 0.05);
        }

        /* Button and actions */
        .form-actions {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 2rem;
            border-top: 1px solid #eee;
            padding-top: 1rem;
        }

        .btn-publish {
            background-color: #4d90fe;
            color: #fff;
            padding: 12px 30px;
            border-radius: 50px;
            font-size: 16px;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .btn-publish:hover {
            background-color: #3578e5;
        }

        .btn-save-draft {
            background-color: #6c757d;
            color: #fff;
            padding: 12px 30px;
            border-radius: 50px;
            font-size: 16px;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .btn-save-draft:hover {
            background-color: #5a6268;
        }

        .btn-get-description {
            display: inline-block;
            background-color: #28a745;
            color: #fff;
            padding: 10px 20px;
            border-radius: 50px;
            font-size: 14px;
            font-weight: 600;
            transition: all 0.3s ease;
            text-decoration: none;
        }

        .btn-get-description:hover {
            background-color: #218838;
        }

        .btn-get-description.disabled {
            background-color: #6c757d;
            cursor: not-allowed;
            pointer-events: none;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .form-container {
                padding: 30px;
            }

            .form-header h2 {
                font-size: 24px;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container py-5">
        <div class="form-container">
            <div class="form-header">
                <h2>Create New Publication</h2>
                <p>Share your thoughts and media with others. Save a draft to generate a description.</p>
            </div>

            <div class="form-card">
                {# Publish Form #}
                {{ form_start(form, {
                    'attr': {'class': 'publication-form', 'id': 'publicationForm', 'data-turbo': 'false'},
                    'action': path('app_publication_new')
                }) }}
                    <div class="mb-4">
                        <div class="form-floating">
                            {{ form_widget(form.contenu, {
                                'attr': {
                                    'class': 'form-control content-textarea',
                                    'placeholder': 'What would you like to share?',
                                    'maxlength': '500',
                                    'id': 'contentField',
                                    'required': 'required'
                                }
                            }) }}
                            {{ form_label(form.contenu, 'Share your thoughts') }}
                        </div>
                    </div>
                    
                    <div class="mb-4">
                        <div class="form-floating">
                            {{ form_widget(form.description, {
                                'attr': {
                                    'class': 'form-control description-textarea',
                                    'placeholder': 'Add more details (optional)',
                                    'maxlength': '1000',
                                    'id': 'descriptionField'
                                }
                            }) }}
                            {{ form_label(form.description, 'Additional details (optional)') }}
                        </div>
                    </div>
                    
                    <div class="mb-4">
                        <label class="form-label">Add an image (optional)</label>
                        <div class="image-upload-container">
                            <div>
                                <i class="fas fa-cloud-upload-alt upload-icon"></i>
                                <h5>Click to browse files</h5>
                                <p class="text-muted">Image upload supported</p>
                            </div>
                            {{ form_widget(form.imageUrl, {
                                'attr': {
                                    'class': 'd-none',
                                    'accept': 'image/*'
                                }
                            }) }}
                        </div>
                    </div>
                

                    <div class="form-actions">
                        <a href="{{ path('app_publications') }}" class="btn btn-outline-secondary btn-lg">
                            <i class="fas fa-arrow-left me-2"></i> Cancel
                        </a>
                        <div>
                            <button type="submit" class="btn btn-save-draft" name="save_draft" value="1">
                                <i class="fas fa-save me-2"></i> Save Draft
                            </button>
                            <button type="submit" class="btn btn-publish" name="publish" value="1">
                                <i class="fas fa-paper-plane me-2"></i> Publish Now
                            </button>
                        </div>
                    </div>
                {{ form_end(form) }}

                {# Get Description Link #}
                <div class="mt-3">
                    <a href="{{ path('app_publication_generate_description', {'content': form.contenu.vars.value|default('placeholder')|url_encode}) }}"
                       class="btn-get-description {{ form.contenu.vars.value is empty ? 'disabled' : '' }}">
                        <i class="fas fa-magic me-2"></i> Get Description
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}