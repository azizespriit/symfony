{% extends 'frontoffice/index.html.twig' %}

{% block title %}Publication Statistics - Sportify{% endblock %}

{% block publications_content %}
    <div class="container my-5">
        <h2 class="text-center mb-5 text-dark">Publication Statistics</h2>

        {# Overview Cards #}
        <div class="row mb-4">
            <div class="col-md-4 mb-3">
                <div class="card bg-gradient-primary text-white shadow-sm h-100 border-0 rounded-3">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="card-title fs-4">Total Publications</h5>
                                <h2 class="mb-0">{{ totalPublications }}</h2>
                            </div>
                            <i class="fas fa-newspaper fa-3x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-3">
                <div class="card bg-gradient-success text-white shadow-sm h-100 border-0 rounded-3">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="card-title fs-4">Active Users</h5>
                                <h2 class="mb-0">{{ usersWithPublicationCount|length }}</h2>
                            </div>
                            <i class="fas fa-users fa-3x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-3">
                <div class="card bg-gradient-info text-white shadow-sm h-100 border-0 rounded-3">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="card-title fs-4">Avg Publications</h5>
                                <h2 class="mb-0">{{ usersWithPublicationCount|length > 0 ? (totalPublications / usersWithPublicationCount|length)|round(1) : 0 }}</h2>
                            </div>
                            <i class="fas fa-chart-bar fa-3x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {# Charts Section #}
        <div class="row mb-4">
            {# Pie Chart #}
            <div class="col-md-6 mb-4">
                <div class="card shadow-sm h-100 border-0 rounded-3">
                    <div class="card-body">
                        <h5 class="card-title">Publications Distribution</h5>
                        <canvas id="publicationsChart" height="250"></canvas>
                    </div>
                </div>
            </div>

            {# Bar Chart #}
            <div class="col-md-6 mb-4">
                <div class="card shadow-sm h-100 border-0 rounded-3">
                    <div class="card-body">
                        <h5 class="card-title">Top Contributors</h5>
                        <canvas id="topContributorsChart" height="250"></canvas>
                    </div>
                </div>
            </div>
        </div>

        {# Data Table #}
        <div class="card shadow-sm mb-4 border-0 rounded-3">
            <div class="card-body">
                <h5 class="card-title">Detailed Statistics</h5>
                {% if usersWithPublicationCount|length > 0 %}
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered">
                            <thead class="thead-dark">
                                <tr>
                                    <th>User</th>
                                    <th>Publications</th>
                                    <th>Percentage</th>
                                    <th>Progress</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for user in usersWithPublicationCount %}
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <img src="{{ asset('images/default-avatar.jpg') }}" alt="{{ user.fullName }}" class="rounded-circle me-2" width="30" height="30">
                                                {{ user.fullName }}
                                            </div>
                                        </td>
                                        <td>{{ user.publicationCount }}</td>
                                        <td>{{ (user.publicationCount / totalPublications * 100)|round(1) }}%</td>
                                        <td>
                                            <div class="progress" style="height: 20px;">
                                                <div class="progress-bar bg-gradient-primary" role="progressbar" 
                                                     style="width: {{ (user.publicationCount / totalPublications * 100) }}%" 
                                                     aria-valuenow="{{ (user.publicationCount / totalPublications * 100) }}" 
                                                     aria-valuemin="0" 
                                                     aria-valuemax="100">
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <div class="alert alert-info text-center">No users with publications found.</div>
                {% endif %}
            </div>
        </div>

        <div class="text-center mt-4">
            <a href="{{ path('app_publications') }}" class="btn btn-primary btn-lg px-4 py-2">
                <i class="fas fa-arrow-left me-2"></i>Back to Publications
            </a>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        .card {
            border-radius: 15px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
        }
        .progress {
            border-radius: 10px;
            background-color: #f4f4f4;
        }
        .progress-bar {
            border-radius: 10px;
        }
        .bg-gradient-primary {
            background: linear-gradient(45deg, #4e73df, #224abe);
        }
        .thead-dark th {
            background-color: #343a40;
            color: white;
            font-weight: 600;
        }
        .table-hover tbody tr:hover {
            background-color: rgba(78, 115, 223, 0.1);
        }
        h2, h5 {
            color: #2c3e50;
            font-weight: 700;
        }
        .btn-primary {
            background-color: #4e73df;
            border: none;
            padding: 10px 25px;
            border-radius: 30px;
            font-weight: 600;
            transition: all 0.3s ease;
        }
        .btn-primary:hover {
            background-color: #2e59d9;
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(78, 115, 223, 0.3);
        }
    </style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const userNames = {{ usersWithPublicationCount|map(user => user.fullName)|json_encode|raw }};
            const publicationCounts = {{ usersWithPublicationCount|map(user => user.publicationCount)|json_encode|raw }};
            
            const backgroundColors = [
                'rgba(78, 115, 223, 0.8)',
                'rgba(28, 200, 138, 0.8)',
                'rgba(54, 185, 204, 0.8)',
                'rgba(246, 194, 62, 0.8)',
                'rgba(231, 74, 59, 0.8)',
                'rgba(142, 68, 173, 0.8)'
            ];

            const pieCtx = document.getElementById('publicationsChart').getContext('2d');
            new Chart(pieCtx, {
                type: 'doughnut',
                data: {
                    labels: userNames,
                    datasets: [{
                        data: publicationCounts,
                        backgroundColor: backgroundColors,
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            position: 'right',
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    const label = context.label || '';
                                    const value = context.raw || 0;
                                    const total = context.dataset.data.reduce((a, b) => a + b, 0);
                                    const percentage = Math.round((value / total) * 100);
                                    return `${label}: ${value} (${percentage}%)`;
                                }
                            }
                        }
                    },
                    cutout: '70%'
                }
            });

            const topFiveNames = userNames.slice(0, 5);
            const topFiveCounts = publicationCounts.slice(0, 5);

            const barCtx = document.getElementById('topContributorsChart').getContext('2d');
            new Chart(barCtx, {
                type: 'bar',
                data: {
                    labels: topFiveNames,
                    datasets: [{
                        label: 'Publications',
                        data: topFiveCounts,
                        backgroundColor: backgroundColors,
                        borderColor: backgroundColors.map(color => color.replace('0.8', '1')),
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                precision: 0
                            }
                        }
                    },
                    plugins: {
                        legend: {
                            display: false
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    return `${context.parsed.y} publications`;
                                }
                            }
                        }
                    }
                }
            });
        });
    </script>
{% endblock %}
