{% extends 'backoffice/base.html.twig' %}

{% block title %}Publication Details - {{ publication.id }}{% endblock %}
{% block page_title %}Publication Details{% endblock %}

{% block body %}
<div class="container-fluid px-4">
    <!-- Publication Card -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Publication #{{ publication.id }}</h6>
            <div>
                <a href="{{ path('backoffice_publication_edit', {'id': publication.id}) }}" 
                   class="btn btn-sm btn-primary">
                    <i class="fas fa-edit mr-1"></i> Edit
                </a>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <!-- Publication Content -->
                <div class="col-md-8">
                    <div class="mb-4">
                        <h4 class="font-weight-bold">{{ publication.user.getFullName() }}</h4>
                        <small class="text-muted">
                            <i class="far fa-clock mr-1"></i> 
                            {{ publication.datePub|date('F j, Y \\a\\t g:i a') }}
                        </small>
                    </div>
                    
                    <div class="mb-4">
                        <p class="lead">{{ publication.contenu }}</p>
                        {% if publication.description %}
                            <div class="bg-light p-3 rounded">
                                <p class="mb-0">{{ publication.description }}</p>
                            </div>
                        {% endif %}
                    </div>
                    
                    <!-- Reactions Summary -->
                    <div class="mb-4">
                        <h5 class="font-weight-bold mb-3">Reactions Summary</h5>
                        <div class="d-flex flex-wrap gap-3">
                            {% for reaction in reactionCounts %}
                                <div class="reaction-badge">
                                    {% if reaction.type == 'like' %}
                                        <span class="badge bg-danger p-2">
                                            <i class="fas fa-heart mr-1"></i> {{ reaction.count }} Likes
                                        </span>
                                    {% elseif reaction.type == 'dislike' %}
                                        <span class="badge bg-secondary p-2">
                                            <i class="fas fa-thumbs-down mr-1"></i> {{ reaction.count }} Dislikes
                                        </span>
                                    {% endif %}
                                </div>
                            {% else %}
                                <div class="text-muted">No reactions yet</div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
                
                <!-- Publication Image -->
                <div class="col-md-4">
                    {% if publication.imageUrl %}
                        <img src="{{ asset('uploads/publications/' ~ publication.imageUrl) }}" 
                             class="img-fluid rounded mb-3 shadow-sm" 
                             alt="Publication image">
                    {% else %}
                        <div class="alert alert-info">No image available</div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
    
    <!-- Comments Section -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">
                <i class="fas fa-comments mr-1"></i> Comments ({{ publication.commentaires|length }})
            </h6>
        </div>
        <div class="card-body">
            {% if publication.commentaires|length > 0 %}
                <div class="list-group">
                    {% for comment in publication.commentaires %}
                        <div class="list-group-item list-group-item-action flex-column align-items-start mb-2 rounded">
                            <div class="d-flex w-100 justify-content-between">
                                <div class="d-flex align-items-center mb-2">
                                    <div class="avatar-sm bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-2">
                                        {{ comment.user.getFullName()|first|upper }}
                                    </div>
                                    <h6 class="mb-0 font-weight-bold">{{ comment.user.getFullName() }}</h6>
                                </div>
                                <small class="text-muted">
                                    {{ comment.datee|date('M j, Y \\a\\t g:i a') }}
                                </small>
                            </div>
                            <p class="mb-2 mt-2">{{ comment.contenu }}</p>
                            <div class="d-flex justify-content-end">
                                <form method="post" action="{{ path('app_commentaire_delete1', {'id': comment.id}) }}" 
                                      onsubmit="return confirm('Are you sure you want to delete this comment?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ comment.id) }}">
                                    <button class="btn btn-sm btn-outline-danger">
                                        <i class="fas fa-trash-alt mr-1"></i> Delete
                                    </button>
                                </form>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <div class="text-center py-4">
                    <i class="fas fa-comment-slash fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">No comments yet</h5>
                </div>
            {% endif %}
        </div>
    </div>
    
    <!-- Reactions Details -->
    <div class="card shadow">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">
                <i class="fas fa-heart mr-1"></i> Reactions Details
            </h6>
        </div>
        <div class="card-body">
            {% if publication.reactions|length > 0 %}
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>User</th>
                                <th>Type</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for reaction in publication.reactions %}
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="avatar-sm bg-info text-white rounded-circle d-flex align-items-center justify-content-center me-2">
                                                {{ reaction.user.getFullName()|first|upper }}
                                            </div>
                                            <span>{{ reaction.user.getFullName() }}</span>
                                        </div>
                                    </td>
                                    <td>
                                        {% if reaction.type == 'like' %}
                                            <span class="badge bg-danger">
                                                <i class="fas fa-heart mr-1"></i> Like
                                            </span>
                                        {% else %}
                                            <span class="badge bg-secondary">
                                                <i class="fas fa-thumbs-down mr-1"></i> Dislike
                                            </span>
                                        {% endif %}
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% else %}
                <div class="text-center py-4">
                    <i class="fas fa-heart-broken fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">No reactions yet</h5>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}