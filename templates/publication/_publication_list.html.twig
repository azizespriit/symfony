{% extends 'base.html.twig' %}

{% block title %}Publications - Sportify{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="page-header mb-4">
        <h1 class="page-title">Publications récentes</h1>
    </div>

    {% if publications|length > 0 %}
        <div class="row g-4">
            {% for publication in publications %}
                {% include 'publication/_card.html.twig' with { publication: publication } %}
            {% endfor %}
        </div>
    {% else %}
        <div class="text-center mt-5">
            <i class="fas fa-exclamation-circle fa-2x mb-3"></i>
            <h3>Aucune publication trouvée</h3>
            {% if searchTerm is defined and searchTerm is not empty %}
                <p>Aucun contenu ne correspond à "{{ searchTerm }}"</p>
            {% endif %}
            <a href="{{ path('app_publication_new') }}" class="btn btn-success mt-3">
                + Créer une publication
            </a>
        </div>
    {% endif %}
</div>
{% endblock %}
