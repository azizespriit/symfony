{# templates/publication/custom_index.html.twig #}
{% extends 'publication/index.html.twig' %}

{% block publications_list %}
    {# Customize just the publications list #}
    <div class="row">
        {% for publication in publications %}
            <div class="col-md-4 mb-4">
                <div class="card">
                    {% if publication.imageUrl %}
                        <img src="{{ asset('uploads/publications/' ~ publication.imageUrl) }}" class="card-img-top" alt="Publication image">
                    {% endif %}
                    <div class="card-body">
                        <h5 class="card-title">{{ publication.contenu|u.truncate(30, '...') }}</h5>
                        <p class="card-text">{{ publication.description|default('No description')|u.truncate(100, '...') }}</p>
                        <a href="{{ path('app_publication_show', {'id': publication.id}) }}" class="btn btn-primary">Read more</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}

{% block intro_section %}
    {# Override the intro section completely #}
    <div class="jumbotron jumbotron-fluid bg-dark text-white">
        <div class="container">
            <h1 class="display-4">Our Publications</h1>
            <p class="lead">Browse through all the latest updates from our community.</p>
        </div>
    </div>
{% endblock %}