    <div class="alert alert-danger">{{ message }}</div>
{% endfor %} #}
    <div class="form-container">
        <h1>Créer une nouvelle réclamation</h1>

        {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'data-turbo': 'false', 'enctype': 'multipart/form-data'}}) }}
            <div class="form-group">
                {{ form_label(form.name) }}
                {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Votre nom complet'}}) }}
                <div class="form-errors">{{ form_errors(form.name) }}</div>
            </div>
            
            <div class="form-group">
                {{ form_label(form.email) }}
                {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'votre@email.com'}}) }}
                <div class="form-errors">{{ form_errors(form.email) }}</div>
            </div>
            
            <div class="form-group">
                {{ form_label(form.commentaire) }}
                {{ form_widget(form.commentaire, {'attr': {'class': 'form-control', 'rows': 5, 'placeholder': 'Décrivez votre réclamation en détail...'}}) }}
                <div class="form-errors">{{ form_errors(form.commentaire) }}</div>
            </div>
            
            <div class="form-group">
                {{ form_label(form.image) }}
                <label for="{{ form.image.vars.id }}" class="custom-file-upload">
                    <i class="fas fa-cloud-upload-alt"></i> Choisir un fichier
                </label>
                <span class="file-name" id="file-name">Aucun fichier sélectionné</span>
                {{ form_widget(form.image, {'attr': {'class': 'form-control-file', 'style': 'display: none;'}}) }}
                <div class="form-errors">{{ form_errors(form.image) }}</div>
                
                <div class="image-preview" id="image-preview">
                    <p>Aperçu :</p>
                    <img id="preview-img" src="#" alt="Aperçu de l'image" style="display: none;">
                </div>
            </div>
            
            <div class="form-group">
                {{ form_label(form.statut) }}
                {{ form_widget(form.statut, {'attr': {'class': 'form-control'}}) }}
                <div class="form-errors">{{ form_errors(form.statut) }}</div>
            </div>
            
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i> {{ button_label|default('Enregistrer') }}
            </button>
        {{ form_end(form) }}

        <a href="{{ path('app_reclamation_index') }}" class="btn btn-secondary mt-3">
            <i class="fas fa-arrow-left"></i> Retour à la liste
        </a>
    </div>
<script src="//code.jquery.com/jquery.js"></script>
<script src="{{ asset('bundles/mercuryseriesflashy/js/flashy.js') }}"></script>
    <script>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            Swal.fire({
                icon: '{{ label == 'error' ? 'error' : (label == 'success' ? 'success' : 'info') }}',
                title: '{{ label|capitalize }}',
                text: '{{ message }}',
                toast: true,
                position: 'top-end',
                showConfirmButton: false,
                timer: 3000,
                timerProgressBar: true,
            });
        {% endfor %}
    {% endfor %}
    document.addEventListener('DOMContentLoaded', function () {
        // Initialize AOS
        if (typeof AOS !== 'undefined') {
            try {
                AOS.init({
                    duration: 1000,
                    once: true,
                });
            } catch (error) {
                console.error('Error initializing AOS:', error);
            }
        } else {
            console.error('AOS library is not loaded.');
        }

        // Gestion de l'affichage du nom du fichier et de l'aperçu
        const fileInput = document.getElementById('{{ form.image.vars.id }}');
        const fileNameDisplay = document.getElementById('file-name');
        const imagePreview = document.getElementById('image-preview');
        const previewImg = document.getElementById('preview-img');

        if (fileInput) {
            fileInput.addEventListener('change', function(e) {
                if (this.files.length > 0) {
                    // Afficher le nom du fichier
                    fileNameDisplay.textContent = this.files[0].name;
                    
                    // Afficher l'aperçu pour les images
                    const file = this.files[0];
                    if (file.type.match('image.*')) {
                        const reader = new FileReader();
                        
                        reader.onload = function(event) {
                            previewImg.src = event.target.result;
                            previewImg.style.display = 'block';
                            imagePreview.style.display = 'block';
                        };
                        
                        reader.readAsDataURL(file);
                    } else {
                        previewImg.style.display = 'none';
                        imagePreview.style.display = 'none';
                    }
                } else {
                    fileNameDisplay.textContent = 'Aucun fichier sélectionné';
                    previewImg.style.display = 'none';
                    imagePreview.style.display = 'none';
                }
            });
        }

        // Validation côté client pour le champ email
        const emailField = document.getElementById('{{ form.email.vars.id }}');
        if (emailField) {
            emailField.addEventListener('blur', function() {
                const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
                if (!emailRegex.test(this.value)) {
                    this.classList.add('is-invalid');
                } else {
                    this.classList.remove('is-invalid');
                }
            });
        }
    });
    </script>
{% endblock %}