{% extends 'baseback.html.twig' %}

{% block title %}Nouvelle réponse{% endblock %}

{% block body %}
    <div class="container mt-4"style="color:white">
        <h1 class="mb-4">Créer une réponse pour la réclamation #{{ reclamation.id }}</h1>

        <div class="card">
            <div class="card-body">
                {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'data-turbo': 'false', 'class': 'needs-validation'}}) }}
                
                    <div class="mb-3">
                        {{ form_label(form.name, 'Nom', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.name, {'attr': {'class': 'form-control' ~ (form.name.vars.errors|length ? ' is-invalid' : '')}}) }}
                        <div class="invalid-feedback">
                            {{ form_errors(form.name) }}
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        {{ form_label(form.fullname, 'Nom complet', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.fullname, {'attr': {'class': 'form-control' ~ (form.fullname.vars.errors|length ? ' is-invalid' : '')}}) }}
                        <div class="invalid-feedback">
                            {{ form_errors(form.fullname) }}
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        {{ form_label(form.commentaire, 'Commentaire', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.commentaire, {'attr': {
                            'class': 'form-control' ~ (form.commentaire.vars.errors|length ? ' is-invalid' : ''),
                            'rows': 5
                        }}) }}
                        <div class="invalid-feedback">
                            {{ form_errors(form.commentaire) }}
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        {{ form_label(form.rating, 'Note (1-5)', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.rating, {'attr': {
                            'class': 'form-control' ~ (form.rating.vars.errors|length ? ' is-invalid' : ''),
                            'min': 1,
                            'max': 5
                        }}) }}
                        <div class="invalid-feedback">
                            {{ form_errors(form.rating) }}
                        </div>
                    </div>
                    
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-1"></i> Enregistrer
                        </button>
                        <a href="{{ path('app_reclamation_show', {'id': reclamation.id}) }}" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i> Retour
                        </a>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}