<div class="row tm-content-row tm-mt-big">
    <!-- Graphique 1: Compétitions par mois -->
    <div class="tm-col tm-col-big">
        <div class="bg-white tm-block h-100">
            <h2 class="tm-block-title">Competitions Stats by Month</h2>
            <canvas id="barChartCompetitions"></canvas>
        </div>
    </div>

    <!-- Graphique 2: Compétitions par type -->
    <div class="tm-col tm-col-big">
        <div class="bg-white tm-block h-100">
            <h2 class="tm-block-title">Competitions Stats by Type</h2>
            <canvas id="pieChartCompetitions"></canvas>
        </div>
    </div>

    <!-- Graphique 3: Réservations par mois -->
    <div class="tm-col tm-col-big">
        <div class="bg-white tm-block h-100">
            <h2 class="tm-block-title">Reservations Stats by Month</h2>
            <canvas id="barChartReservations"></canvas>
        </div>
    </div>

    <!-- Graphique 4: Réservations par mode de paiement -->
    <div class="tm-col tm-col-big">
        <div class="bg-white tm-block h-100">
            <h2 class="tm-block-title">Reservations Stats by Payment Mode</h2>
            <canvas id="pieChartReservations"></canvas>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    // Graphique des compétitions par mois (Bar Chart)
    var competitionsByMonth = {{ competitionsByMonth|json_encode()|raw }};
    var months = Object.keys(competitionsByMonth);
    var countsCompetitions = Object.values(competitionsByMonth);

    var ctxBarCompetitions = document.getElementById('barChartCompetitions').getContext('2d');
    var barChartCompetitions = new Chart(ctxBarCompetitions, {
        type: 'bar',
        data: {
            labels: months,
            datasets: [{
                label: 'Nombre de compétitions par mois',
                data: countsCompetitions,
                backgroundColor: 'rgba(75, 192, 192, 0.2)',
                borderColor: 'rgba(75, 192, 192, 1)',
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: {
                    position: 'top',
                },
                tooltip: {
                    callbacks: {
                        label: function(tooltipItem) {
                            return tooltipItem.raw + ' compétitions';
                        }
                    }
                }
            },
            scales: {
                y: {
                    beginAtZero: true,
                }
            }
        }
    });

    // Graphique des compétitions par type (Pie Chart)
    var competitionsByType = {{ competitionsByType|json_encode()|raw }};
    var types = Object.keys(competitionsByType);
    var countsByType = Object.values(competitionsByType);

    var ctxPieCompetitions = document.getElementById('pieChartCompetitions').getContext('2d');
    var pieChartCompetitions = new Chart(ctxPieCompetitions, {
        type: 'pie',
        data: {
            labels: types,
            datasets: [{
                label: 'Répartition des compétitions par type',
                data: countsByType,
                backgroundColor: ['#FF6347', '#4CAF50', '#FFD700', '#00BFFF'],
                borderColor: 'rgba(0, 0, 0, 0.1)',
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: {
                    position: 'top',
                },
                tooltip: {
                    callbacks: {
                        label: function(tooltipItem) {
                            return tooltipItem.raw + ' compétitions';
                        }
                    }
                }
            }
        }
    });

    // Graphique des réservations par mois (Bar Chart)
    var reservationsByMonth = {{ reservationsByMonth|json_encode()|raw }};
    var reservationMonths = Object.keys(reservationsByMonth);
    var reservationCounts = Object.values(reservationsByMonth);

    var ctxBarReservations = document.getElementById('barChartReservations').getContext('2d');
    var barChartReservations = new Chart(ctxBarReservations, {
        type: 'bar',
        data: {
            labels: reservationMonths,
            datasets: [{
                label: 'Nombre de réservations par mois',
                data: reservationCounts,
                backgroundColor: 'rgba(153, 102, 255, 0.2)',
                borderColor: 'rgba(153, 102, 255, 1)',
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: {
                    position: 'top',
                },
                tooltip: {
                    callbacks: {
                        label: function(tooltipItem) {
                            return tooltipItem.raw + ' réservations';
                        }
                    }
                }
            },
            scales: {
                y: {
                    beginAtZero: true,
                }
            }
        }
    });

    // Graphique des réservations par mode de paiement (Pie Chart)
    var reservationsByMode = {{ reservationsByMode|json_encode()|raw }};
    var modes = Object.keys(reservationsByMode);
    var modeCounts = Object.values(reservationsByMode);

    var ctxPieReservations = document.getElementById('pieChartReservations').getContext('2d');
    var pieChartReservations = new Chart(ctxPieReservations, {
        type: 'pie',
        data: {
            labels: modes,
            datasets: [{
                label: 'Répartition des réservations par mode de paiement',
                data: modeCounts,
                backgroundColor: ['#FF5733', '#33FF57', '#3357FF', '#F4A300'],
                borderColor: 'rgba(0, 0, 0, 0.1)',
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: {
                    position: 'top',
                },
                tooltip: {
                    callbacks: {
                        label: function(tooltipItem) {
                            return tooltipItem.raw + ' réservations';
                        }
                    }
                }
            }
        }
    });
</script>

