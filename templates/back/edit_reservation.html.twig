<div class="row tm-content-row tm-mt-big">
    <div class="col-xl-12 col-lg-12 tm-md-12 tm-sm-12 tm-col">
        <div class="bg-white tm-block h-100">
    <h2>Modifier la Réservation</h2>

    <form id="reservationEditForm" method="POST" novalidate>
    <div class="mb-3">
        <label for="nomP" class="form-label">Nom</label>
        <input type="text" class="form-control" name="nomP" id="nomP" value="{{ reservation.nomP }}">
        <div class="text-danger" id="error-nomP"></div>
    </div>

    <div class="mb-3">
        <label for="prenomP" class="form-label">Prénom</label>
        <input type="text" class="form-control" name="prenomP" id="prenomP" value="{{ reservation.prenomP }}">
        <div class="text-danger" id="error-prenomP"></div>
    </div>

    <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" class="form-control" name="email" id="email" value="{{ reservation.email }}">
        <div class="text-danger" id="error-email"></div>
    </div>

    <div class="mb-3">
        <label for="num" class="form-label">Numéro</label>
        <input type="number" class="form-control" name="num" id="num" value="{{ reservation.num }}">
        <div class="text-danger" id="error-num"></div>
    </div>

    <div class="mb-3">
        <label for="dateR" class="form-label">Date Réservation</label>
        <input type="date" class="form-control" name="dateR" id="dateR" value="{{ reservation.dateR|date('Y-m-d') }}">
        <div class="text-danger" id="error-dateR"></div>
    </div>

    <div class="mb-3">
    <label for="modeP" class="form-label">Mode</label>
    <select class="form-control" name="modeP" id="modeP">
        <option value="">Sélectionnez un mode de paiement</option>
        <option value="En ligne" {% if app.request.get('modeP') == 'En ligne' %}selected{% endif %}>En ligne</option>
        <option value="Carte" {% if app.request.get('modeP') == 'Carte' %}selected{% endif %}>Carte</option>
        <option value="Espèce" {% if app.request.get('modeP') == 'Espèce' %}selected{% endif %}>Espèce</option>
    </select>
    <div class="text-danger" id="error-modeP"></div>
</div>


    <button type="submit" class="btn btn-success">Enregistrer</button>
    <a href="{{ path('app_reservation') }}" class="btn btn-secondary">Annuler</a>
</form>

<script>
document.getElementById('reservationEditForm').addEventListener('submit', function (e) {
    e.preventDefault();
    let valid = true;

    document.querySelectorAll('.text-danger').forEach(el => el.textContent = '');

    const nomP = document.getElementById('nomP');
    const prenomP = document.getElementById('prenomP');
    const email = document.getElementById('email');
    const num = document.getElementById('num');
    const dateR = document.getElementById('dateR');
    const modeP = document.getElementById('modeP');

    const regexText = /^[A-Za-zÀ-ÿ\s\-']+$/;
    const regexEmail = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;

    // Nom
    if (!regexText.test(nomP.value) || nomP.value.length < 2 || nomP.value.length > 50) {
        document.getElementById('error-nomP').textContent = "Le nom doit contenir entre 2 et 50 lettres.";
        valid = false;
    }

    // Prénom
    if (!regexText.test(prenomP.value) || prenomP.value.length < 2 || prenomP.value.length > 50) {
        document.getElementById('error-prenomP').textContent = "Le prénom doit contenir entre 2 et 50 lettres.";
        valid = false;
    }

    // Email
    if (!regexEmail.test(email.value)) {
        document.getElementById('error-email').textContent = "Adresse e-mail invalide.";
        valid = false;
    }

    // Numéro
    if (!num.value || num.value.length < 8 || num.value.length > 15) {
        document.getElementById('error-num').textContent = "Le numéro doit contenir entre 8 et 15 chiffres.";
        valid = false;
    }

    // Date
    const today = new Date().toISOString().split('T')[0];
    if (!dateR.value || dateR.value < today) {
        document.getElementById('error-dateR').textContent = "Veuillez choisir une date future.";
        valid = false;
    }

    // Mode de paiement
    if (modeP.value === "") {
        document.getElementById('error-modeP').textContent = "Le mode de paiement est obligatoire.";
        valid = false;
    }

    if (valid) {
        this.submit();
    }
});
</script>

