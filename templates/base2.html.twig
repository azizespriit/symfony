  <style>
    /* Style global pour le footer */
    html, body {
      height: 100%;
    }
    body {
      display: flex;
      flex-direction: column;
    }
    .site-wrap {
      flex: 1 0 auto;
      width: 100%;
    }
    .footer-section {
      flex-shrink: 0;
      background-color: #343a40;
      color: white;
      padding: 2rem 0;
      margin-top: 3rem;
    }
    
    /* Chat button styles */
    .chat-button {
      position: fixed;
      bottom: 30px;
      right: 30px;
      width: 60px;
      height: 60px;
      border-radius: 50%;
      background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
      color: white;
      display: flex;
      justify-content: center;
      align-items: center;
      cursor: pointer;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
      transition: all 0.3s;
      z-index: 1000;
      text-decoration: none;
    }
    
    .chat-button svg {
      width: 30px;
      height: 30px;
      fill: white;
    }
    
    .chat-button:hover {
      transform: translateY(-5px);
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
    }
  </style>
  
  {% block stylesheets %}{% endblock %}
</head>

