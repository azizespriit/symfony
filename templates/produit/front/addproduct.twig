{% extends 'base.html.twig' %}

{% block title %}Ajouter un Produit - Stamina{% endblock %}

{% block css %}
    {{ parent() }}
    <style>
        .add-product-section {
            padding: 100px 0;
            background-color: #f8f9fa;
        }
        
        .subheading {
            text-transform: uppercase;
            font-size: 0.9rem;
            font-weight: 600;
            letter-spacing: 0.1em;
            color: #007bff;
            margin-bottom: 10px;
            display: block;
        }
        
        .form-card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 15px 35px rgba(0,0,0,0.1);
            overflow: hidden;
            animation: fadeIn 0.6s ease-in-out;
        }
        
        @keyframes fadeIn {
            0% { opacity: 0; transform: translateY(20px); }
            100% { opacity: 1; transform: translateY(0); }
        }
        
        .form-card .card-header {
            background-color: #007bff;
            color: white;
            border: none;
            padding: 25px 30px;
            position: relative;
            overflow: hidden;
        }
        
        .form-card .card-header::after {
            content: '';
            position: absolute;
            bottom: 0;
            right: 0;
            width: 150px;
            height: 150px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 50%;
            transform: translate(50%, 50%);
        }
        
        .form-card .card-body {
            padding: 40px 30px;
        }
        
        .form-group label {
            font-weight: 600;
            color: #495057;
            margin-bottom: 10px;
            display: block;
        }
        
        .form-control {
            border-radius: 8px;
            padding: 12px 15px;
            height: auto;
            border: 1px solid #ced4da;
            transition: all 0.3s;
            font-size: 1rem;
        }
        
        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }
        
        .image-preview {
            width: 100%;
            height: 250px;
            border: 2px dashed #dee2e6;
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 20px;
            overflow: hidden;
            position: relative;
            transition: all 0.3s ease;
            background-color: #f8f9fa;
        }
        
        .image-preview:hover {
            border-color: #007bff;
            background-color: rgba(0, 123, 255, 0.05);
        }
        
        .image-preview img {
            max-width: 100%;
            max-height: 100%;
            object-fit: contain;
            transition: all 0.3s ease;
        }
        
        .image-preview:hover img {
            transform: scale(1.05);
        }
        
        .image-preview-placeholder {
            color: #6c757d;
            text-align: center;
            padding: 20px;
            transition: all 0.3s ease;
        }
        
        .image-preview-placeholder i {
            transition: all 0.5s ease;
        }
        
        .image-preview:hover .image-preview-placeholder i {
            transform: scale(1.2) rotate(15deg);
            color: #007bff;
        }
        
        .btn-submit {
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 50px;
            padding: 15px 35px;
            font-weight: 600;
            letter-spacing: 0.5px;
            transition: all 0.3s;
            position: relative;
            overflow: hidden;
            z-index: 1;
        }
        
        .btn-submit::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(255, 255, 255, 0.2);
            z-index: -1;
            transform: scaleX(0);
            transform-origin: right;
            transition: transform 0.5s ease;
        }
        
        .btn-submit:hover {
            background-color: #0069d9;
            transform: translateY(-3px);
            box-shadow: 0 10px 20px rgba(0, 105, 217, 0.3);
        }
        
        .btn-submit:hover::after {
            transform: scaleX(1);
            transform-origin: left;
        }
        
        .btn-cancel {
            background-color: #6c757d;
            color: white;
            border: none;
            border-radius: 50px;
            padding: 15px 35px;
            font-weight: 600;
            letter-spacing: 0.5px;
            transition: all 0.3s;
        }
        
        .btn-cancel:hover {
            background-color: #5a6268;
            transform: translateY(-3px);
            box-shadow: 0 10px 20px rgba(90, 98, 104, 0.3);
        }
        
        .required-field::after {
            content: '*';
            color: #dc3545;
            margin-left: 4px;
        }
        
        .form-text {
            font-size: 0.85rem;
            color: #6c757d;
            margin-top: 5px;
        }
        
        .form-control-file {
            opacity: 0;
            position: absolute;
            width: 100%;
            height: 100%;
            top: 0;
            left: 0;
            cursor: pointer;
            z-index: 10;
        }
        
        .file-upload-container {
            position: relative;
            margin-top: 10px;
        }
        
        .file-upload-btn {
            width: 100%;
            padding: 12px 15px;
            background-color: #e9ecef;
            border: 1px solid #ced4da;
            border-radius: 8px;
            text-align: center;
            cursor: pointer;
            transition: all 0.3s ease;
            color: #495057;
        }
        
        .file-upload-btn:hover {
            background-color: #dee2e6;
        }
        
        .form-control-file:focus + .file-upload-btn {
            border-color: #80bdff;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }
        
        .section-title-container {
            margin-bottom: 3rem;
        }
        
        @keyframes floating {
            0% { transform: translateY(0px); }
            50% { transform: translateY(-8px); }
            100% { transform: translateY(0px); }
        }
        
        .floating-icon {
            animation: floating 3s ease-in-out infinite;
            display: inline-block;
        }
    </style>
{% endblock %}

{% block body %}
<div class="site-section add-product-section">
    <div class="container">
        <div class="row justify-content-center text-center mb-5 section-title-container">
            <div class="col-md-8 section-heading">
                <span class="subheading">Administration</span>
                <h2 class="heading mb-3">Ajouter un Nouveau Produit</h2>
                <p class="text-muted">Complétez le formulaire ci-dessous pour ajouter un nouveau produit à votre catalogue.</p>
                <div class="mt-3 floating-icon">
                    <i class="icon-shopping-bag" style="font-size: 3rem; color: #007bff; opacity: 0.7;"></i>
                </div>
            </div>
        </div>

        {# Display flash messages #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="row justify-content-center mb-4">
                    <div class="col-md-10">
                        <div class="alert alert-{{ label == 'error' ? 'danger' : label }}">
                            {{ message }}
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% endfor %}

        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="card form-card">
                    <div class="card-header">
                        <h3 class="mb-0">Informations du Produit</h3>
                    </div>

                    {%  if app.user.getRoles()== ["ROLE_USER"]%}

                        <p class=" text-black text-center mt-2"> Vous n'avez pas le droit (Seuelement l'admin !) </p>

                    {% else %}

                        <div class="card-body">
                            {{ form_start(form, {'attr': {'id': 'product-form', 'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                            {{ form_widget(form._token) }}
                            
                            <div class="row">
                                <div class="col-md-8">
                                    <div class="form-group">
                                        <label for="{{ form.nom.vars.id }}" class="required-field">Nom du Produit</label>
                                        {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Entrez le nom du produit'}}) }}
                                        <div class="invalid-feedback">
                                            {{ form_errors(form.nom) }}
                                        </div>
                                        <small class="form-text">Le nom doit contenir entre 2 et 255 caractères.</small>
                                    </div>
                                    
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="{{ form.prix.vars.id }}" class="required-field">Prix (€)</label>
                                                {{ form_widget(form.prix, {'attr': {'class': 'form-control', 'placeholder': 'Ex: 19.99'}}) }}
                                                <div class="invalid-feedback">
                                                    {{ form_errors(form.prix) }}
                                                </div>
                                                <small class="form-text">Le prix doit être supérieur à zéro.</small>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="{{ form.stock.vars.id }}" class="required-field">Stock Disponible</label>
                                                {{ form_widget(form.stock, {'attr': {'class': 'form-control', 'placeholder': 'Ex: 100'}}) }}
                                                <div class="invalid-feedback">
                                                    {{ form_errors(form.stock) }}
                                                </div>
                                                <small class="form-text">Le stock ne peut pas être négatif.</small>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="form-group">
                                        <label for="{{ form.description.vars.id }}">Description du Produit</label>
                                        {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': '5', 'placeholder': 'Décrivez le produit en détail...'}}) }}
                                        <div class="invalid-feedback">
                                            {{ form_errors(form.description) }}
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="{{ form.photoFile.vars.id }}">Image du Produit</label>
                                        <div class="image-preview" id="imagePreview">
                                            <div class="image-preview-placeholder">
                                                <i class="icon-image" style="font-size: 3rem;"></i>
                                                <p class="mt-2">Aperçu de l'image</p>
                                            </div>
                                        </div>
                                        <div class="d-flex justify-content-center mb-3">
                                            <button type="button" id="generateImageBtn" class="btn btn-primary mr-2">
                                                <i class="icon-magic-wand mr-1"></i> Générer avec IA
                                            </button>
                                            <div class="small mt-2 text-center text-danger" style="display: none;">
                                                <i class="icon-alert-circle mr-1"></i> La génération IA n'est pas disponible actuellement. Veuillez utiliser l'upload manuel.
                                            </div>
                                        </div>
                                        <div class="file-upload-container mt-3">
                                            <div class="file-upload-btn">
                                                <i class="icon-upload mr-1"></i> Sélectionner une image
                                            </div>
                                        {{ form_widget(form.photoFile, {'attr': {'class': 'form-control-file', 'accept': 'image/*'}}) }}
                                        </div>
                                        <div id="generatedImageFilename" style="display: none;">
                                            <input type="hidden" name="generated_image_filename" id="generatedImageFilenameInput" value="">
                                        </div>
                                        <div class="invalid-feedback">
                                            {{ form_errors(form.photoFile) }}
                                        </div>
                                        <small class="form-text">Formats acceptés: JPG, PNG, WEBP (max. 5MB)</small>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="mt-4 text-center">
                                <button type="submit" class="btn btn-submit">
                                    <i class="icon-check mr-2"></i> Enregistrer le Produit
                                </button>
                                <a href="{{ path('produit_catalogue') }}" class="btn btn-cancel ml-3">
                                    <i class="icon-close mr-2"></i> Annuler
                                </a>
                            </div>
                            
                            {{ form_end(form) }}
                        </div>

                    {% endif %}



                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block js %}
    {{ parent() }}
    <script>
        // Preview image before upload
        $(document).ready(function() {
            // Form validation
            (function() {
                'use strict';
                window.addEventListener('load', function() {
                    var forms = document.getElementsByClassName('needs-validation');
                    var validation = Array.prototype.filter.call(forms, function(form) {
                        form.addEventListener('submit', function(event) {
                            if (form.checkValidity() === false) {
                                event.preventDefault();
                                event.stopPropagation();
                            }
                            form.classList.add('was-validated');
                        }, false);
                    });
                }, false);
            })();
            
            // Image preview functionality
            $('#{{ form.photoFile.vars.id }}').change(function() {
                const file = this.files[0];
                if (file) {
                    const reader = new FileReader();
                    reader.onload = function(e) {
                        $('#imagePreview').html('<img src="' + e.target.result + '" />');
                    }
                    reader.readAsDataURL(file);
                } else {
                    $('#imagePreview').html('<div class="image-preview-placeholder"><i class="icon-image" style="font-size: 3rem;"></i><p class="mt-2">Aperçu de l\'image</p></div>');
                }
            });
            
            // Fonction pour afficher les messages d'erreur
            function showErrorMessage(message) {
                // Afficher la div d'erreur en la rendant visible
                const errorDiv = $('.small.mt-2.text-center.text-danger');
                errorDiv.text(message);
                errorDiv.show();
                
                // Masquer le message après 8 secondes
                setTimeout(function() {
                    errorDiv.fadeOut(500);
                }, 8000);
            }
            
            // Fonction pour masquer les messages d'erreur
            function hideErrorMessage() {
                $('.small.mt-2.text-center.text-danger').hide();
            }
            
            // Génération d'image avec Eden AI
            $('#generateImageBtn').click(function() {
                const description = $('#{{ form.description.vars.id }}').val();
                
                if (!description) {
                    showErrorMessage('Veuillez d\'abord remplir la description du produit pour générer une image.');
                    return;
                }
                
                // Masquer les anciens messages d'erreur
                hideErrorMessage();
                
                // Modifier le bouton pour indiquer que la génération est en cours
                const btn = $(this);
                const originalText = btn.html();
                btn.html('<i class="icon-spinner icon-spin"></i> Génération en cours...');
                btn.prop('disabled', true);
                
                // Faire une requête AJAX pour générer l'image
                $.ajax({
                    url: '{{ path('image_generate') }}',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify({
                        description: description
                    }),
                    success: function(response) {
                        if (response.success) {
                            // Afficher l'image générée dans la prévisualisation
                            $('#imagePreview').html('<img src="' + response.preview_url + '" />');
                            
                            // Stocker le nom du fichier généré pour le formulaire
                            $('#generatedImageFilenameInput').val(response.filename);
                            
                            // Notification de succès
                            alert('Image générée avec succès !');
                        } else {
                            // Afficher l'erreur détaillée
                            console.error('Erreur de génération d\'image:', response);
                            showErrorMessage('Erreur lors de la génération: ' + (response.error || 'Erreur inconnue'));
                        }
                    },
                    error: function(xhr) {
                        console.error('Erreur AJAX:', xhr);
                        
                        let errorMessage = 'Erreur lors de la génération de l\'image.';
                        if (xhr.responseJSON) {
                            if (xhr.responseJSON.error) {
                                errorMessage = xhr.responseJSON.error;
                            }
                        }
                        
                        showErrorMessage(errorMessage);
                    },
                    complete: function() {
                        // Rétablir le bouton
                        btn.html(originalText);
                        btn.prop('disabled', false);
                    }
                });
            });
        });
    </script>
{% endblock %}
