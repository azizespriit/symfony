{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card">
                    <div class="card-header">
                        <h3>{{ title|default('Form') }}</h3>
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}
                        {% block form_fields %}
                            {{ form_widget(form) }}
                        {% endblock %}
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">{{ button_label|default('Save') }}</button>
                            {% if cancel_path is defined %}
                                <a href="{{ path(cancel_path) }}" class="btn btn-secondary">Cancel</a>
                            {% endif %}
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 